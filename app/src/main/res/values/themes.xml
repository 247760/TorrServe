<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. https://material.io/develop/android/docs/getting-started -->
    <style name="Theme.TorrServer" parent="Theme.MaterialComponents">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/darker_gray</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darker_gray</item>
        <!-- Bottom bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/darker_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@drawable/gradient_divider_hg</item>
    </style>
    <style name="Theme.TorrServer.Black" parent="Theme.TorrServer">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar</item>
        <item name="android:strokeColor" tools:targetApi="l">@color/colorScrimWhite</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:colorBackground">@color/colorBlack</item>
        <item name="colorBackgroundFloating">@color/colorBlack</item>
    </style>
    <style name="Theme.TorrServer.Light" parent="Theme.MaterialComponents.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/lighter_gray</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/lighter_gray</item>
        <!-- Bottom bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/lighter_gray</item>
    </style>

    <style name="HeadPreferenceCategory" parent="@style/Preference.Category.Material">
        <item name="android:layout">@layout/head_preference_category</item>
    </style>
    <style name="HeadPreferenceCategoryText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">32.0dip</item>
        <item name="android:paddingStart">16.0dip</item>
        <item name="android:paddingBottom">16.0dip</item>
    </style>

    <style name="PlayDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:listDivider">@drawable/gradient_divider_hw</item>
        <item name="android:windowBackground">@drawable/rc_inset_dialog</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darker_gray</item>
        <!-- Bottom bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/darker_gray</item>
    </style>
</resources>